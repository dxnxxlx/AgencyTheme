
mixin titulo-seccion(titulo)
	.row
		.col-sm-12
			h2.titulo-seccion= titulo
			p.sub-seccion= subseccion

mixin portfolio(foto, title, sub)
	.col-sm-6.col-md-4
		.img-portfolio
			img(src='img/portfolio/#{foto}.png')
		p.subtitulo #{title}
		p.sub-seccion #{sub} Design

mixin timeline-caja(foto, fecha, evento)
	.timeline-caja.row
		.timeline-contenido
			p.subtitulo= fecha
			p.subtitulo= evento
			p.texto-contenido= about
		.timeline-img
			img(src='img/about/#{foto}.jpg')
mixin redes()
	.red
		a(href="#"): i.fa.fa-twitter
	.red
		a(href="#"): i.fa.fa-facebook
	.red
		a(href="#"): i.fa.fa-linkedin

mixin perfil(foto, nombre, cargo)
	.col-sm-4
		.img-perfil
			img(src='img/team/#{foto}.jpg')
		p.subtitulo= nombre
		p.texto-contenido Lead #{cargo}
		.redes
		block
		+redes

mixin cliente(cliente)
	.col-sm-6.col-md-3
		a(href="#")
			img(src="img/logos/#{cliente}.jpg")

mixin form(tag, placeholder)
	#{tag}(type="text", class="formulario", placeholder="YOUR #{placeholder} *")